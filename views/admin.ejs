      <% events.forEach(event => { %>
      <tr style="background:white; text-align:center;">
        <td><img src="<%= event.image %>" width="100" height="70" style="object-fit:cover; border-radius:6px;"></td>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td>
          <a href="/edit/<%= event._id %>" class="button" style="background:orange;">âœï¸ Edit</a>
          <a href="/delete/<%= event._id %>" class="button" style="background:red;">ğŸ—‘ Delete</a>
        </td>
      </tr>
      <% }) %>
    </table>
  </div>

  <footer>Â© 2025 College Event Manager</footer>
</body>
</html>
